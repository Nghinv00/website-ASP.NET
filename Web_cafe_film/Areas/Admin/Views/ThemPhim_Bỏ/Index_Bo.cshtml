@model List<Models.Framework.Movie>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    //     Layout = "~/Areas/Admin/Views/DanhSach/Index.cshtml";
    ViewBag.Title = "ThemMoi";
}


<style>
    HTML, BODY {
        cursor: url("../../../../Animation/diamondblue.ani"), url("../../../../Animation/diamondblue.gif"), auto;
    }
</style>
<style>
    A:hover {
        cursor: url("../../../../Animation/diamondblue.ani"), url("../../../../Animation/diamondblue.gif"), auto;
    }
</style>





<div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
    <h4>
        <label>
            <a href="@Url.Action("Index", "CreateMovie")">.::Thêm Mới Phim::.</a>
            @*@Html.ActionLink(".:Thêm Mới Phim 123:.", "Create", "ThemPhim")*@
            @*<button type="button" class="btn btn-block btn-danger">.::Thêm Mới Phim Vào Danh Sách::.</button>*@
        </label>    
    </h4>
</div>

    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh Sách Phim trong cơ sở dữ liệu</h3>
                </div>


           
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:5%;height:100px">STT</th>
                                <th style="width:15%;height:100px">Tên phim</th>
                                <th style="width:10%;height:100px">Link</th>
                                <th style="width:15%;height:100px">Ảnh Poster</th>
                                <th style="width:10%;height:100px">Đạo Diễn</th>
                                <th style="width:10%;height:100px">Biên Kịch</th>
                                <th style="width:10%;height:100px">Ngôi Sao</th>
                                <th style="width:13%;height:100px">Mô tả</th>
                                <th style="width:10%;height:100px">Thời Gian SX</th>
                                <th style="width:7%;height:100px">Thời Lượng</th>
                                <th style="width:5%;height:100px">Ẩn(>1), Hiện(1)</th>
                            </tr>
                        </thead>
                        @{
                            foreach (var item in Model)
                            {
                                <tbody>
                                    <tr role="row" class="odd">
                                        <td style="width:5%;height:100px">@item.MovieID</td>
                                        <td style="width:15%;height:100px">@item.MovieName</td>
                                        <td style="width:10%;height:100px">@item.URLDetail</td>
                                        <td style="width:15%;height:100px"><div id="AnhBia"><img src="@Url.Content("~/Areas/Images/Images/"+item.LinkImage)" width="100" height="100"></div></td>
                                        <td style="width:10%;height:100px">@item.Director</td>
                                        <td style="width:10%;height:100px">@item.Writer</td>
                                        <td style="width:10%;height:100px">@item.Stars</td>
                                        <th style="width:13%;height:100px">@item.Descriptions</th>
                                        <td style="width:10%;height:100px">@item.ReleaseDate</td>
                                        <td style="width:7%;height:100px">@item.RunningTime</td>                         
                                        <td style="width:5%">@item.New</td>
                                    </tr>
                                </tbody>
                            }
                        }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->


        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
