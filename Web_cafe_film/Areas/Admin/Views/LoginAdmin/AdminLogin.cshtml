
<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <title>Đăng nhập hệ thống</title>

    <title>@ViewBag.Title</title>
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Areas/assets/Login/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Areas/assets/Login/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    @*<link href="~/Content/AdminLTE/css/ionicons.min.css" rel="stylesheet" />*@
    <link href="~/Areas/assets/Login/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    @*<link href="~/Content/AdminLTE/css/AdminLTE.min.css" rel="stylesheet" />*@
    <link href="~/Areas/assets/Login/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    @*<link href="~/Content/AdminLTE/css/blue.css" rel="stylesheet" />*@
    <link href="~/Areas/assets/Login/css/blue.css" rel="stylesheet" />



</head>




<body class="hold-transition login-page">
    <div>


        @RenderBody()
        <div class="login-box">
            @*<img src="~/Images/AdminLTE/imageLogin.jpg" />*@
            <img src="~/Areas/Images/AdminLTE/imageLogin.jpg" />

            <div class="login-logo">

                <a href="../../index2.html">
                    <b>Đăng nhập hệ thống</b>   Quản Lý Hệ Thống Xem Phim
                </a>


            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Đăng nhập với tài khoản hệ thống</p>

                <form action="../../index2.html" method="post">


                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Tên Tài Khoản">
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control" placeholder="Mật Khẩu">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> Lưu mật khẩu
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">
                                Đăng Nhập

                            </button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center">
                    <p>- Hoặc -</p>


                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook" aria-hidden="true"></i>
                        Đăng nhập với tài khoản facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">

                        <i class="fa fa-google-plus" aria-hidden="true"></i>
                        Đăng Nhập với tài khoản Google+
                    </a>
                </div>
                <!-- /.social-auth-links -->

                <a href="#">Quên mật khẩu</a><br>
                <a href="register.html" class="text-center">Chưa có tài khoản? Hãy liên hệ với quản trị viên</a>

            </div>
            <!-- /.login-box-body -->
        </div>
        <!-- /.login-box -->
        <!-- jQuery 2.2.3 -->
        @*<script src="~/Content/AdminLTE/js/jquery-2.2.3.min.js"></script>*@
        <script src="~/Areas/assets/Login/js/jquery-2.2.3.min.js"></script>
        <!-- Bootstrap 3.3.6 -->
        @*<script src="~/Content/AdminLTE/js/bootstrap.min.js"></script>*@
        <script src="~/Areas/assets/Login/js/bootstrap.min.js"></script>
        <!-- iCheck -->
        @*<script src="~/Content/AdminLTE/js/icheck.min.js"></script>*@
        <script src="~/Areas/assets/Login/js/icheck.min.js"></script>

        <script>
          $(function () {
            $('input').iCheck({
              checkboxClass: 'icheckbox_square-blue',
              radioClass: 'iradio_square-blue',
              increaseArea: '20%' // optional
            });
          });
        </script>
    </div>


</body>

</html>
