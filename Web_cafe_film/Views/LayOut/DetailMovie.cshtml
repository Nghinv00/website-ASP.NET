                        <input type="submit" value="Bình Luận" class="btn btn default">
                    </form>
                </div>
                <!--Button tìm kiếm -->
                <div class="col-sm-3 sidebar sidebar2">
                    <div class="row m0 sidebar_row_inner">

                        <!--       Search Form: Form Tìm Kiếm   -->

                        <form action="#" role="search" class="search_form row m0 widget widget_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Tìm kiếm">
                                <span class="input-group-addon">
                                    <button type="submit">
                                        <img src="~/Content/MovieDetail/images/icons/search.png" alt="">

                                    </button>
                                </span>
                            </div>
                        </form>    
                        <!--Có thể bạn muốn xem -->
                        <div class="row m0 widget widget_popular_videos">
                            <h5 class="widget_title">Có thể bạn muốn xem</h5>
                            <div class="row m0 inner">
                                @foreach (Web_cafe_film.Models.Movie itemMovie in ViewData["SUGGESTFILM"] as List<Web_cafe_film.Models.Movie>)
                                {
                                    <div class="media">
                                    <!-- Load ảnh -->
                                    <div class="media-left">
                                        <!-- Link 1 : phần hình ảnh -->
                                        <a href="@Url.Action("DetailMovie", new { @MovieID = itemMovie.MovieID })">
                                            <!-- Phần hình ảnh -->                                           
                                            <img src="@Url.Content("~/LinkImage/"+itemMovie.LinkImage)" alt="Image" style="width:100% " />
                                            <span class="duration"></span>                                           
                                            <span class="duration"><label></label></span>                                         
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <!-- Link 2 : Phần dòng Texxt-->                                        
                                          <a href="@Url.Action("DetailMovie", new { @MovieID = itemMovie.MovieID })">
                                            <!-- Link phần tên của từng bộ phim-->
                                            <h5>@itemMovie.MovieName</h5>
                                        </a>
                                        <!-- số lượt View-->
                                        <div class="row m0 meta_info views">
                                            Mã Bộ Phim: @itemMovie.MovieID
                                        </div>
                                        <!-- Ngày Sản Xuất-->
                                        <div class="row m0 meta_info posted">
                                            @itemMovie.YearProduce
                                        </div>
                                    </div>
                                </div>
                                }
                                
                            </div>
                        </div>
